<section class="bg-primary" id="popular">
    <div class="container">
        <h2 class="margin-top-1 margin-bottom-1 text-primary">Popular People</h2>
        <% @people.each do |person|%>
        <div class="col-sm-3 table-bordered people-item">
            <div class="col-sm-12" style="text-align:center;">
                <a href="/people/<%= person.id%>">
                <%if person.img_path.present?%>
                <img src="<%= person.img_path%>" alt="<%= person.name%>" width="210" height="315">
                <%else%>
                <img src="/assets/person-placeholder.png" alt="<%= person.name%>" width="210" height="315">
                <%end%>
                </a>
            </div>
            <div class="col-sm-12">
                <h4 style="text-align:center;">
                    <a class="text-primary" title="<%= person.name%>"
                        href="/people/<%= person.id%>"><%= person.name%></a></h4>
            </div>
        </div>
        <%end%>
        <div style="margin-left: 200px;"><%= paginate @people,theme: 'twitter-bootstrap-3' %></div>
    </div>
</section>